# Cache de npm/yarn
.npm
.yarn/cache
.yarn/unplugged
.yarn/build-state.yml
.yarn/install-state.gz
.pnp.*

# Cache de TypeScript
*.tsbuildinfo

# Cache de ESLint
.eslintcache

# Cache de Vite
.vite/
client/.vite/

# Archivos temporales
*.tmp
*.temp
.cache/
.temp/

# ===================================
# TESTING
# ===================================
coverage/
.nyc_output/
*.lcov

